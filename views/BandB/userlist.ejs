<h2 class="normal">Lista de usuarios</h2>


    <% users.forEach((user) => { %>
        <a class="hompePage-box" href="/bars&beers/<%= user._id %>/userProfile">
            <div class="img-box avatar">
                <img src="<%= user.userimage %>" alt="">
            </div>
            <div class="text-box">
                <h3 class="underline"><%= user.username %> </h3>
                
                <p class="text-size user-box"> Lives in <b class="bold"><%= user.neighbourhood %></b>, <%= user.city %></p>
                <p class="text-size user-box"> Loves: <b class="bold"><%= user.beerType %></b> beer</p>
            </div>
        </a>
    <div class="flex">
        <div class="card-CRUD">
            <form class="input_btn" action="/bars&beers/<%= user._id %>/deleteUser" method="post">
             <input  type="submit" value="Delete">
            </form>
        </div>
    </div>
        
        
   <% }) %>
