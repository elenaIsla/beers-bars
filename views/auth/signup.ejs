<form id="form" action="/signup" method="POST">
    <label for="username">Username</label><br>
    <input type="text" name="username"
      placeholder="Your username">

    <label for="password">Password</label><br>
    <input type="password" name="password"
      placeholder="********">
    <label for="neighbourhood">Neighbourhood:</label>
    <select name="neighbourhood" id="neighbourhood">
        <option value="Poble Nou">Poble Nou</option>
        <option value="Poble Sec">Poble Sec</option>
        <option value="Sarria">Sarria</option>
    </select>
    <h3>Choose your favourite Beer Type</h3>
    <input type="radio" id="draft" value="draft" name="beerType">
    <label for="beerType">Draft</label>

    <input type="radio" id="bottle" value="bottle" name="beerType">
    <label for="beerType">Bottle</label>
      
<button type="submit">Create account</button>
    
  </form>